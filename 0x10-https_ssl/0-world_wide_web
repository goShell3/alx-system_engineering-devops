#!/bin/bash
# 0-world_wide_web - A script to audit subdomain DNS records

# Function to get DNS information for a subdomain
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get DNS information and extract the relevant line
    local dig_output
    dig_output=$(dig "$full_domain" +short)
    
    # Extract record type (assuming A record for this task)
    local record_type="A"
    local destination=$(echo "$dig_output" | awk 'NR==1 {print $1}')
    
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script logic
main() {
    local domain=$1
    local subdomain=$2
    
    if [ -z "$subdomain" ]; then
        # No specific subdomain provided, check all required subdomains
        get_dns_info "$domain" "www"
        get_dns_info "$domain" "lb-01"
        get_dns_info "$domain" "web-01"
        get_dns_info "$domain" "web-02"
    else
        # Specific subdomain requested
        get_dns_info "$domain" "$subdomain"
    fi
}

# Execute main function with provided arguments
main "$1" "$2"