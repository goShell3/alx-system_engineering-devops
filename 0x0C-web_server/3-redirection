#!/bin/bash

# Install Nginx if not already installed
apt-get update -y
apt-get install nginx -y

# Configure the redirect in Nginx
CONFIG_FILE="/etc/nginx/sites-available/default"
REDIRECT_CONFIG="location = /redirect_me {
    return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
}"

# Insert the redirect configuration after the server_name line
sed -i "/server_name _;/a $REDIRECT_CONFIG" $CONFIG_FILE

# Test Nginx configuration
nginx -t

# Restart Nginx without using systemctl
service nginx restart

# Verify the redirect is working
echo "Configuration complete. Test with:"
echo "curl -sI localhost/redirect_me/"