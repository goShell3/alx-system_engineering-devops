#!/bin/bash

# Install Nginx if not already installed
apt-get update -y
apt-get install nginx -y

# Create custom 404 page
mkdir -p /var/www/html/errors
echo "Ceci n'est pas une page" > /var/www/html/errors/404.html

# Configure Nginx to use custom 404 page
CONFIG_FILE="/etc/nginx/sites-available/default"
ERROR_CONFIG="error_page 404 /errors/404.html;
location = /errors/404.html {
    internal;
}"

# Insert error configuration after the server_name line
sed -i "/server_name _;/a $ERROR_CONFIG" $CONFIG_FILE

# Test Nginx configuration
nginx -t

# Restart Nginx without using systemctl
service nginx restart

# Verify the configuration
echo "Configuration complete. Test with:"
echo "curl localhost/nonexistentpage"
echo "curl -sI localhost/nonexistentpage"