#!/usr/bin/env bash
# Script to install and configure Nginx to serve "Hello World!" on /

# Exit on error
set -e

# Update package list and install nginx silently
apt-get update -y
apt-get install -y nginx

# Create a simple Hello World page
echo "Hello World!" > /var/www/html/index.html

# Ensure nginx is started using service (not systemctl)
service nginx start || true  # ignore if already running

# Optional: ensure nginx restarts if already running
service nginx restart || true
